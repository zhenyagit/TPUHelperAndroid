<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@drawable/ic_rounded_corner_15"
              android:elevation="15dp"
              android:layout_height="60dp" android:weightSum="100" android:layout_marginVertical="4dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/itemIcon"
            android:layout_weight="15" android:layout_margin="3dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="75" android:paddingHorizontal="15dp"
            android:weightSum="100">
        <TextView
                android:text="Course"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/name" android:textColor="@color/white"
                android:layout_weight="50" android:gravity="center_vertical"/>
        <TextView
                android:text="Course"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/description" android:textColor="@color/white"
                android:layout_weight="50"/>
    </LinearLayout>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent" app:srcCompat="@drawable/ic_arrow_down" android:id="@+id/dropDown"
            android:layout_weight="10" android:paddingHorizontal="5dp"/>
</LinearLayout>